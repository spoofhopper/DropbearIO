<div class="col-12">
  <div class="table-responsive">
    <h1 style="color:#cc3333;">All Groups</h1>
      <table class="table table-hover">

        <tr>
          <th> Group Name </th>
          <th> Description </th>
          <th> Image </th>
          <th> Actions </th>
        </tr>

    <% @groups.each do |group| %>
    <tr>
      <td><%= link_to group.name, group_path(group) %></td>
      <td><%= group.description %></td>
      <td><%= image_tag(group.image_url, class: 'img-thumbnail img-responsive') %></td>
      <td>
        <%=link_to 'Edit Group', edit_group_path(group), class: 'btn btn-warning btn-xs' %>
        <%=link_to 'Delete Group', group, method: :delete, data: {confirm: "Are you Sure?"}, class: 'btn btn-xs btn-danger' %>
      </td>
    </tr>

    <% end %>
  </div>
</div>


<div class="well">
  <%= link_to "Create New Group", new_group_path, class: 'btn btn-default' %>
</div>
