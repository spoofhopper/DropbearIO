<div class="col-12">
  <div class="table-responsive">
    <div class="brand">All Groups</div>
      <div class="address-bar">
        <p>
        <p>
        <%= link_to "Create New Group", new_user_group_path(@user), class: 'btn btn-default' %>
      </div>
      <table class="table table-hover">

        <tr>
          <th> Group Name </th>
          <th> Description </th>
          <th> Image </th>
          <th> Actions </th>
        </tr>

    <% @groups.each do |group| %>
    <tr>
      <td><%= group.name %></td>
      <td><%= group.description %></td>
      <td><%= image_tag(group.image_url, class: 'img-thumbnail img-responsive') %></td>
      <td>
        <%=link_to 'New Message', new_user_group_message_path(@user, group), class: 'btn btn-success btn-xs' %>
        <%=link_to 'All Contacts', user_group_contacts_path(@user, group), class: 'btn btn-warning btn-xs' %>
        <%=link_to 'All Messages', user_group_messages_path(@user, group), class: 'btn btn-warning btn-xs' %>
        <%=link_to 'Edit Group', edit_user_group_path(@user, group), class: 'btn btn-warning btn-xs' %>
        <%=link_to 'Delete Group', user_group_path(@user, group), method: :delete, data: {confirm: "Are you Sure?"}, class: 'btn btn-xs btn-danger' %>
      </td>
    </tr>

    <% end %>
  </div>
</div>
