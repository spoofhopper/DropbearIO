<div class="panel panel-default">
</div>

<div class="panel-body">
  <%= simple_form_for @message do |f| %>

    <% if @message.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@message.errors.count, "error") %> prohibited
          this message from being saved:
        </h2>
        <ul>
          <% @message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :body, label: false, input_html: {placeholder: "Message Text"}%>
    <%= f.input :date, as: :datetime, start_year: Date.today.year,
                                  end_year: Date.today.year + 1,
                                  order: [:minute, :hour, :day, :month, :year] %>
    <%= f.submit "Submit".html_safe, class: 'btn btn-lg btn-danger'%>

  <% end %>

</div>
