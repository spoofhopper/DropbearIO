<div class="col-12">
  <div class="table-responsive">

    <div class="brand"><%= @group.name %>: All Messages</div>

      <div class="address-bar">
        <p>
        <p>
          <%= link_to "Create New Message", new_group_message_path(@group, @message), class: 'btn btn-success' %>

      </div>

      <table class="table table-hover">

        <tr>
          <th> Message Text </th>
          <th> Group </th>
          <th> Sent? </th>
          <th> Scheduled? </th>
          <th> Date </th>
          <th> Actions </th>
        </tr>

    <% @messages.each do |message| %>
    <tr>
      <td><%= message.body %></td>
      <td><%= message.group.name %></td>
      <td><%= message.sent %></td>
      <td><%= message.scheduled %></td>
      <td><%= message.date %></td>
      <td>
        <%=link_to 'Send Message Now', group_message_path(@group,message), class: 'btn btn-danger btn-xs' %>
        <%=link_to 'Edit Message', edit_group_message_path(@group, message), class: 'btn btn-warning btn-xs' %>
        <%=link_to 'Delete Message', group_message_path(@group, message), method: :delete, data: {confirm: "Are you Sure?"}, class: 'btn btn-xs btn-danger' %>
      </td>
    </tr>

    <% end %>
  </div>
</div>
